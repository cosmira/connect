{
    "name": "cosmira/connect",
    "description": "SMTP server implemented in pure PHP",
    "type": "library",
    "keywords": ["smtp", "server", "email"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandr Chernyaev",
            "email": "bliz48rus@gmail.com",
            "homepage": "https://tabuna.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0 || ^12.0",
        "ramsey/uuid": "^4.7",
        "react/socket": "^1.16.0",
        "zbateson/mail-mime-parser": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "phpunit/phpunit": "^11.5",
        "symfony/var-dumper": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Cosmira\\Connect\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cosmira\\Connect\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
